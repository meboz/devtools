---
:modulepath: <%= scope.lookupvar('foreman::puppet_modules_dir') %>
:tftppath: tftp/
#:rrd_report_url: report/
#:ldap: true
#your default puppet server - can be overridden in the host level
#if none specified, plain "puppet" will be used.
:puppet_server: <%= scope.lookupvar('foreman::puppet_server') %>
:unattended: <%= scope.lookupvar('foreman::bool_unattended') %>
#use the following setting to override the default 30 minutes puppet run interval - value must be in minutes
#:puppet_interval: 60
#:document_root: /var/www
# default user: admin:changeme
:login: <%= scope.lookupvar('foreman::bool_authentication') %>
:ssl_ca_file: "<%= scope.lookupvar('foreman::service_ssl_ca') -%>"
:ssl_certificate: "<%= scope.lookupvar('foreman::service_ssl_cert') -%>"
:ssl_priv_key: "<%= scope.lookupvar('foreman::service_ssl_key') -%>"
